- content_for :page_title do
  CONTACT

= form_for @contact, :url => contact_path, :class => "contact-form" do |form|
  %fieldset.contact-form__fields
    .two-column-content
      .two-column-content__title-wrapper
        %h2.two-column-content__second-heading.contact-form__fields-title
          %i.fa.fa-envelope-o.contact-form__fields-title-icon
          Email
      .two-column-content__inner
        .contact-form__field
          = form.label :name, t('Name'), {:class => "contact-form__label"}
          = form.text_field :name, {:class => "contact-form__text-input"}
        .contact-form__field
          = form.label :email, t('Email'), {:class => "contact-form__label"}
          = form.text_field :email, {:class => "contact-form__text-input"}
        .contact-form__field
          = form.label :body, t('Body'), {:class => "contact-form__label"}
          = form.text_area :body, {:class => "contact-form__textarea"}
        %ul.contact-form__actions
          %li.contact-form__action
            = form.submit 'Send', {:class => "contact-form__action-send"}
