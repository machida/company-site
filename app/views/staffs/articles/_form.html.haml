= form_for [:staffs, @article] do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title, t('Title')
    %br/
    = f.text_field :title
  .js-markdown
    .field
      = f.label :body, t('Body')
      %br/
      = f.text_area :body
  .field
    = f.label :category, t('Category')
    %br/
    = f.collection_select :category_id, Category.all, :id, :name
  .field
    = f.label :staffs, t('Author')
    %br/
    = f.collection_select :staff_id, Staff.all, :id, :name
  .field
    = f.label :tags, t("Tags (separated by commas)")
    %br/
    = f.text_field :tag_list
  .field
    = f.label :published, t("Published")
    %br/
    = f.check_box :published
  .field
    = f.label :created_at, t('Created at')
    %br/
    = f.text_field :created_at
  .actions
    = f.submit(t('Create'))
