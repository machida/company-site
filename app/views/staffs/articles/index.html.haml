%header.main__header
  %h2.main__header-heading
    = t('Articles')
  = link_to new_staffs_article_path, {:class => "main__header-add-link large-button"} do
    %i.fa.fa-plus
    = t('New Article')
.main__body
  .main__search.main-search
    %input#js-search{:type => "text"}
    %nav.main-tabs-nav
      %ul.main-tabs-nav__tabs
        %li.main-tabs-nav__tab<>
          = link_to t('All'), staffs_articles_path, {:class => "main-tabs-nav__tab-link #{params[:published] ? '' : 'is-current'}"}
        %li.main-tabs-nav__tab<>
          = link_to t('Published'), staffs_articles_path(:published => "true"), {:class => "main-tabs-nav__tab-link #{params[:published] == 'true' ? 'is-current' : ''}"}
        %li.main-tabs-nav__tab<>
          = link_to t('Unpublished'), staffs_articles_path(:published => "false"), {:class => "main-tabs-nav__tab-link #{params[:published] == 'false' ? 'is-current' : ''}"}

  %table.main__table.main-table
    %tbody
      - @articles.each do |article|
        %tr.main-table__tr
          %td.main-table__td.js-search-target
            = link_to staffs_article_path(article) do
              = article.title
          %td.main-table__td= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
          %td.main-table__td= article.created_at
          %td.main-table__td
            %ul.main-table-actions
              - if article.published?
                %li.main-table-actions__action.published
                  = link_to article_path(article) do
                    = t('Published')
              - else
                %li.main-table-actions__action.unpublished
                  = t('Unpublished')
              %li.main-table-actions__action
                = link_to t('Edit'), edit_staffs_article_path(article), {:class => "main-table-actions__edit"}
              %li.main-table-actions__action
                = link_to t('Destroy'), staffs_article_path(article), method: :delete, class: "main-table-actions__delete", data: { confirm: 'Are you sure?' }
