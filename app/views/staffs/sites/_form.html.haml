= form_for [:staffs, @site] do |f|
  - if @site.errors.any?
    #error_explanation
      %h2
        = pluralize(@site.errors.count, "error")
        prohibited this site from being saved:
      %ul
        - @site.errors.full_messages.each do |msg|
          %li= msg
  .staff-fields
    .staff-fields__field
      = f.label :title, {:class => 'staff-fields__label'}
      = f.text_field :title, {:class => 'staff-fields__text'}
    .staff-fields__field
      = f.label :body, {:class => 'staff-fields__label'}
      = f.text_area :body, {:class => 'staff-fields__body'}
    .staff-fields__field
      = f.label :meta_keywords, t('Meta Keywords'), {:class => 'staff-fields__label'}
      = f.text_field :meta_keywords, {:class => 'staff-fields__text'}
    .staff-fields__field.relative
      = f.label :meta_description, t('Meta Description'), {:class => 'staff-fields__label'}
      = f.text_area :meta_description, {:class => 'staff-fields__body'}
    .staff-fields__field
      = f.submit(t('Update'), :class => "large-button")
