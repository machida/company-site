= form_for [:staffs, @staff] do |f|
  - if @staff.errors.any?
    #error_explanation
      %h2
        = pluralize([:staffs, @article].errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
