= form_for [:staffs, @service] do |f|
  - if @service.errors.any?
    #error_explanation
      %h2
        = pluralize(@service.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @service.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .field
    = f.label :published, "Published"
    %br/
    = f.check_box :published
  .field
    = f.label :created_at
    %br/
    = f.text_field :created_at
  .actions
    = f.submit
