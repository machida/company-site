= form_for [:staffs, @service] do |f|
  - if @service.errors.any?
    #error_explanation
      %h2
        = pluralize(@service.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @service.errors.full_messages.each do |msg|
          %li= msg
  .staff-fields
    .staff-fields__field
      = f.label :title, {:class => 'staff-fields__label'}
      = f.text_field :title, {:class => 'staff-fields__text'}
    .js-markdown.js-markdown-service
      .staff-fields__field.relative
        .staff-fields__markdown
          = f.label :body, {:class => 'staff-fields__label'}
          = f.text_area :body, {:class => 'staff-fields__body'}
    .staff-fields__field
      = f.label :published, "Published", {:class => 'staff-fields__label'}
      = f.check_box :published, {:class => 'staff-fields__text'}
    .staff-fields__field
      = f.label :created_at, {:class => 'staff-fields__label'}
      = f.text_field :created_at
    .staff-fields__actions
      = f.submit
