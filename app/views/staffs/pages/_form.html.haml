= form_for [:staffs, @page] do |f|
  - if @page.errors.any?
    #error_explanation
      %h2
        = pluralize(@page.errors.count, "error")
        prohibited this page from being saved:
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title, t('Title')
    %br/
    = f.text_field :title
  .field
    = f.label :body, t('Body')
    %br/
    = f.text_area :body
  .field
    = f.label :slug, t('Slug')
    %br/
    = f.text_field :slug
  .field
    = f.label :published, t('Published')
    %br/
    = f.check_box :published
  .actions
    = f.submit(t('Update'))
