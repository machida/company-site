%h1 Listing articles
%table
  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.body
        %td= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
        %td= link_to 'Show', admin_article_path(article)
        %td= link_to 'Edit', edit_admin_article_path(article)
        %td= link_to 'Destroy', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Article', new_admin_article_path
