%h1 Listing snippets
%table
  %thead
    %tr
      %th
      %th
      %th
  %tbody
    - @snippets.each do |snippet|
      %tr
        %td= link_to 'Show', snippet
        %td= link_to 'Edit', edit_snippet_path(snippet)
        %td= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Snippet', new_snippet_path
