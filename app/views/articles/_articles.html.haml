#container.articles
  - @articles.each do |article|
    %article.articles-article
      .articles-article__created-at
        = show_date(article.created_at)
      %h2.articles-article__title
        = link_to article, {:class => "articles-article__title-link"} do
          = article.title
      - if article.tags.count > 0
        .articles-article__tags
          %ul.tags
            = raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
      .articles-article__meta
        - if article.staff
          = image_tag("member-icons/#{article.staff.slug}.jpg", :alt => "#{article.staff.name}", :class => "articles-article__author-icon-image pie")
          .articles-article__author-name
            = article.staff.name

